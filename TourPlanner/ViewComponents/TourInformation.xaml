<UserControl x:Class="TourPlanner.ViewComponents.TourInformation"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              xmlns:local="clr-namespace:TourPlanner.ViewComponents"             DataContext="{Binding TourOverviewViewModel}"             mc:Ignorable="d"              d:DesignHeight="480" d:DesignWidth="600">    <Grid>        <Grid.RowDefinitions>            <!-- First Row -->            <RowDefinition Height="Auto"/>            <!-- Second Row -->            <RowDefinition Height="*"/>        </Grid.RowDefinitions>        <!-- 1st Row -->        <!-- 1st Row -->        <!-- 1st Row -->        <Grid Grid.Row="0">            <Label Grid.Row="0" Content="Tour Information" HorizontalAlignment="Left" FontSize="14" Margin="5,3,0,3" Foreground="White" Background="Green"/>        </Grid>        <!-- 2nd Row -->        <!-- 2nd Row -->        <!-- 2nd Row -->        <TabControl Grid.Row="1" Margin="5">            <!-- General Tab -->            <TabItem Header="General" FontSize="15" Background="Blue">                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>                                <StackPanel Width="Auto" Height="Auto" Margin="0,10,0,0">                    <!-- ID -->                    <StackPanel Orientation="Horizontal">                        <Label Content="ID:                         " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="left" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.ID}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                                        <!-- Name -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Name:                   " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.ID}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- From -->                    <StackPanel Orientation="Horizontal">                        <Label Content="From:                    " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding From}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- To -->                    <StackPanel Orientation="Horizontal">                        <Label Content="To:                         " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding To}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Transport-Type -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Transport-Type:     " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.Transport}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Tour-Distance -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Tour-Distance:       " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.Distance}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Estimated Time -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Estimated Time:     " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.Duration}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Popularity -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Popularity:             " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding PopularityProperty}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Child-Friendliness -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Child-Friendliness: " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding ChildFriendly}" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                    <!-- Description -->                    <StackPanel Orientation="Horizontal">                        <Label Content="Description:           " HorizontalAlignment="Left" Height="Auto" Width="Auto" HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center"/>                        <TextBox Text="{Binding DetailSelectedTour.Description}" TextWrapping="Wrap" IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" Height="Auto"  BorderThickness="0" FontSize="14" VerticalAlignment="Center" VerticalContentAlignment="Center"/>                    </StackPanel>                </StackPanel>            </TabItem>                                                <!-- Route Tab -->            <TabItem Header="Route" FontSize="15" Background="Blue">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>
                <Image Source="{Binding Image}" Width="600" Height="400"></Image>
            </TabItem>


            <!-- Misc Tab -->            <TabItem Header="Misc" FontSize="15" Background="Blue">
                <TabItem.Style>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="Red" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabItem.Style>
                
                
                <!-- ??? -->
                
                
            </TabItem>
        </TabControl>    </Grid></UserControl>