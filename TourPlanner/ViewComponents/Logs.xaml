<UserControl x:Class="TourPlanner.ViewComponents.Logs"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              xmlns:local="clr-namespace:TourPlanner.ViewComponents"             mc:Ignorable="d"              d:DesignHeight="250" d:DesignWidth="500">    <Grid>        <Grid.RowDefinitions>            <!-- Logss/ + Button/ - Button/ ... Button Row -->            <RowDefinition Height="Auto"/>            <!-- List of Logs for a selected Tour Row -->            <RowDefinition Height="*"/>        </Grid.RowDefinitions>        <!-- Logss/ + Button/ - Button/ ... Button Row -->      <!-- Logss/ + Button/ - Button/ ... Button Row -->        <Label Grid.Row="0" Content="Logs" HorizontalAlignment="Left" FontSize="14" Margin="2,3,0,3" Foreground="White" Background="Green"/>        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,10,0">            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14" Margin="0,0,3,0" Command="{Binding OpenCreateTourLogWindowCommand}">+</Button>            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14" Margin="0,0,3,0" Command="{Binding DeleteTourLogsCommand}">-</Button>            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14">...</Button>        </StackPanel>                <!-- List of Logs for a selected Tour Row -->        <DataGrid Grid.Row="1" ItemsSource="{Binding TourLogCollection}" SelectedItem="{Binding SelectedTourLog}" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" AutoGenerateColumns="False" Margin="2">            <DataGrid.Columns>                <DataGridTextColumn Header="Date/Time" Binding="{Binding Timestamp}" Width="80"/>                <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="80"/>                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="80"/>                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="80"/>                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*"/>            </DataGrid.Columns>        </DataGrid>    </Grid></UserControl>