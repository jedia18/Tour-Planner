<UserControl x:Class="TourPlanner.ViewComponents.Tours"             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              mc:Ignorable="d"              d:DesignHeight="200" d:DesignWidth="500">    <Grid>        <Grid.RowDefinitions>            <!-- Tours/ + Button/ - Button/ ... Button Row -->            <RowDefinition Height="Auto"/>            <!-- List of tours Row -->            <RowDefinition Height="*"/>        </Grid.RowDefinitions>        <!-- Tours/ + Button/ - Button/ ... Button Row -->      <!-- Tours/ + Button/ - Button/ ... Button Row -->      <!-- Tours/ + Button/ - Button/ ... Button Row -->        <Label Grid.Row="0" Content="Tours" HorizontalAlignment="Left" FontSize="14" Margin="0,3,0,3" Foreground="White" Background="Green"/>        <StackPanel Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,10,0">            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14" Margin="0,0,3,0" Command="{Binding OpenCreateTourWindowCommand}">+</Button>            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14" Margin="0,0,3,0" Command="{Binding DeleteTourCommand}">-</Button>            <Button Background="Blue" Foreground="White" Width="30" Height="30" FontSize="14">...</Button>        </StackPanel>        <!-- List of tours Row -->      <!-- List of tours Row -->        <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"  ItemsSource="{Binding Data}" SelectedItem="{Binding SelectedTour}" >            <ListView.View>                <GridView>                    <GridViewColumn Header="Tour" Width="100" DisplayMemberBinding="{Binding Name}"/>                    <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>                </GridView>            </ListView.View>        </ListView>    </Grid></UserControl>